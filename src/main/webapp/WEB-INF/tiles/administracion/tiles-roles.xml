    			<add-attribute value="/js/jquery-treegrid/js/jquery.treegrid.js"/>
    			<add-attribute value="/js/jquery-ui.js"/>
    			<add-attribute value="/js/ap/roles.js"/>
		</put-list-attribute>
			
